<h1>Update Task: <%= @task.title %></h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group form-check">
    <%=  f.label :completed %>
    <%= f.check_box :completed, {}, 1, 0 %>
  </div>

  <%= f.submit "Update", class: 'btn btn-primary' %>

<% end %>


<%= link_to "Back to tasks list", tasks_path %>
